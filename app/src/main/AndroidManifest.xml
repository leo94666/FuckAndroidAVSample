<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.top.av">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Av"
        android:name=".App"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="n">
        <activity android:name=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.FFmpegInfoActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.OpenGLESActivity"
            android:screenOrientation="portrait"
            android:label="OpenGLES"
            android:exported="true">
        </activity>
        <activity android:name=".ui.CpuFeatureActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.VideoEditorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.VideoPlayerActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>